@model IEnumerable<MovieHunt.Models.Movie>
@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movie</h1>
<table class="table table-condensed">

    <thead>
        <tr class="success">
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Name, "Details", "Customer", new { id = movie.Id }, null)

                </td>
                <td>

                </td>
            </tr>
        }
    </tbody>
</table>